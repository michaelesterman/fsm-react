{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
